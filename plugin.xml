<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.stuntaz.qcwtool.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="org.stuntaz.qcwtool.Perspective"
            id="org.stuntaz.qcwtool.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="org.stuntaz.qcwtool.IntroView"
            id="org.stuntaz.qcwtool.introview"
            name="IntroView">
      </view>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.stuntaz.qcwtool.application"
            name="QCWTool">
         <property
               name="aboutText"
               value="%aboutText">
         </property>
         <property
               name="appName"
               value="QCWTool">
         </property>
         <property
               name="aboutImage"
               value="icons/alt_window_32.gif">
         </property>
      </product>
   </extension>
</plugin>
